<resources>
    <!-- Base application theme. -->
    <style name="Theme.LunchConnect" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

        <!--Remove Default Splash Screen-->
        <item name="android:windowIsTranslucent">true</item>
        <!--Make All Default Font Montserrat-Bold-->
        <item name="android:fontFamily">@font/montserrat_bold</item>

    </style>

    <style name="Theme.LunchConnect.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LunchConnect.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LunchConnect.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>