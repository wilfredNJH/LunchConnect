<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_purple_10">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- User Profile Management & Badges -->

            <!-- Name -->

            <Button
                android:id="@+id/switch_button"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:text="Edit"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/pastelGreen"/>

<!--            <ImageView-->
<!--                android:id="@+id/imageView_button_edit"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="end"-->
<!--                app:srcCompat="@drawable/button_edit" />-->

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <!-- Add the background shape or image -->
                <ImageView
                    android:layout_width="186dp"
                    android:layout_height="151dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shape_circle_white" />

                <!-- Add the ShapeableImageView on top of the background -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profile_image"
                    android:layout_width="151dp"
                    android:layout_height="132dp"
                    android:layout_gravity="center"
                    android:src="@drawable/star" />

            </FrameLayout>

            <TextView
                android:id="@+id/nametitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Name"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/nameProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@drawable/text_underline"
                />

            <!-- Department -->
            <TextView
                android:id="@+id/departmenttitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Department"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/departmentProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="8dp"
                android:textSize="25sp"
                android:background="@drawable/text_underline"
                />

            <!-- Job Role -->
            <TextView
                android:id="@+id/job_roletitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Job Role"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/job_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@drawable/text_underline" />

            <!-- Short Description -->
            <TextView
                android:id="@+id/short_descriptiontitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Short Description"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/short_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:background="@drawable/text_underline" />

            <!-- Hobbies/Interest -->
            <TextView
                android:id="@+id/hobbies_interesttitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Hobbies/Interest"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/hobbies_interest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@drawable/text_underline" />

            <!-- Location -->
            <TextView
                android:id="@+id/locationtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Location"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@drawable/text_underline" />

            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:textColor="@color/black"
                android:backgroundTint="@color/pastelGreen"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
